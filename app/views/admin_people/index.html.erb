
<!-- Header -->
<section id="header">
  <header class="major">
    <h1>#EatDrinkBeSamson</h1>
    <p>A night to remember</p>


  </header>
  <div class="container">
    <ul class="actions">
      <li><a href="#one" class="button special scrolly">Begin</a></li>
    </ul>
  </div>
</section>




<!-- One -->
<section id="one" class="main special">
  <div class="container">

    <div class="content">
      <header class="major">
        <h2>Listing Admin People</h2>


      </header>


      <p id="notice"><%= notice %></p>



      <table>
        <thead>
        <tr>
          <th>Name</th>

          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @admin_people.each do |admin_person| %>
            <tr>
              <td><%= admin_person.name %></td>

              <td><%= admin_person.email %></td>


              <td><%= link_to 'Delete', admin_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Admin person', new_admin_person_path %>


    </div>

  </div>
</section>


